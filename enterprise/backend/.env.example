# Backend Environment Variables

# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sms_sm_enterprise
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_CLUSTER_ENABLED=true

# MongoDB Configuration (for documents/logs)
MONGODB_URL=mongodb://localhost:27017/sms_sm_enterprise
MONGODB_MAX_POOL_SIZE=10

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_secure
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# OAuth Configuration
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_MICROSOFT_CLIENT_ID=your_microsoft_client_id
OAUTH_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# External Services
SENDGRID_API_KEY=your_sendgrid_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=sms-sm-enterprise-assets

# Message Queue (Kafka)
KAFKA_BROKERS=localhost:9092,localhost:9093,localhost:9094
KAFKA_CLIENT_ID=sms-sm-backend
KAFKA_GROUP_ID=sms-sm-consumer-group
KAFKA_USERNAME=your_kafka_username
KAFKA_PASSWORD=your_kafka_password

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_elasticsearch_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=https://app.sms-sm.health,https://admin.sms-sm.health
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Encryption
ENCRYPTION_KEY=your_32_char_encryption_key_here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Feature Flags
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_APOLLO_STUDIO=false
ENABLE_INTROSPECTION=false
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Health Checks
HEALTH_CHECK_TIMEOUT=5000
DATABASE_HEALTH_CHECK=true
REDIS_HEALTH_CHECK=true
KAFKA_HEALTH_CHECK=true

# Performance
CLUSTER_WORKERS=0
ENABLE_COMPRESSION=true
ENABLE_ETAG=true
REQUEST_TIMEOUT=30000

# Internationalization
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,pt-BR,es-ES,fr-FR,de-DE,it-IT,ja-JP,ko-KR,zh-CN,ar-SA

# Third-party Integrations
STRIPE_SECRET_KEY=sk_live_xxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxx
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sms-sm-enterprise-backups

# Development
DEV_DATABASE_URL=postgresql://user:password@localhost:5432/sms_sm_dev
DEV_REDIS_URL=redis://localhost:6379/1
DEV_LOG_LEVEL=debug